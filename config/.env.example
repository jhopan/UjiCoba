# Advanced Backup System Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# TELEGRAM BOT CONFIGURATION
# ============================================================================

# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram User ID (get from @userinfobot)
# You can add multiple IDs separated by commas: 123456789,987654321
ALLOWED_USER_IDS=your_telegram_user_id_here

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Base directory for local backups staging
BACKUP_BASE_DIR=/data/data/com.termux/files/home/backups

# Maximum file size for backup (in bytes) - 100MB default
MAX_FILE_SIZE=104857600

# Auto-delete files after successful upload (true/false)
AUTO_DELETE_AFTER_UPLOAD=false

# Compress files before upload (true/false)
COMPRESS_FILES=false

# Verify file integrity after upload (true/false)
VERIFY_UPLOADS=true

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================

# Maximum storage per Google Drive account (15GB default)
MAX_STORAGE_PER_ACCOUNT=16106127360

# Storage warning threshold (90% = 0.9)
STORAGE_WARNING_THRESHOLD=0.9

# Auto-rotate to next account when current is full (true/false)
AUTO_ROTATE_ACCOUNTS=true

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Connection timeout in seconds
CONNECTION_TIMEOUT=30

# Upload timeout in seconds (5 minutes)
UPLOAD_TIMEOUT=300

# Maximum concurrent uploads
MAX_CONCURRENT_UPLOADS=3

# Bandwidth limit in bytes per second (leave empty for unlimited)
BANDWIDTH_LIMIT=

# Use resumable uploads for large files (true/false)
USE_RESUMABLE_UPLOADS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Save logs to file (true/false)
LOG_TO_FILE=true

# Send important logs to Telegram (true/false)
LOG_TO_TELEGRAM=true

# Maximum log file size in bytes (10MB)
MAX_LOG_SIZE=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============================================================================
# PATHS TO MONITOR
# ============================================================================

# Comma-separated list of paths to monitor for backup
# Use full paths for Termux storage
MONITOR_PATHS=/data/data/com.termux/files/home/storage/shared/Download,/data/data/com.termux/files/home/storage/shared/Pictures,/data/data/com.termux/files/home/storage/shared/Documents

# ============================================================================
# SCHEDULE CONFIGURATION
# ============================================================================

# Time for automatic backup (24-hour format: HH:MM)
BACKUP_SCHEDULE_TIME=00:00

# Enable automatic scheduled backup (true/false)
AUTO_BACKUP_ENABLED=true

# Days of week for backup (0=Monday, 6=Sunday)
# Leave empty for daily backup, or specify: 0,1,2,3,4 for weekdays
BACKUP_DAYS=

# ============================================================================
# FILE ORGANIZATION
# ============================================================================

# Organize files by date (true/false)
ORGANIZE_BY_DATE=true

# Organize files by type (true/false)
ORGANIZE_BY_TYPE=true

# Date format for folder names (YYYY-MM-DD recommended)
DATE_FORMAT=%Y-%m-%d

# Create backup manifest file (true/false)
CREATE_MANIFEST=true

# Duplicate file handling: skip, overwrite, rename
DUPLICATE_HANDLING=skip

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Number of retry attempts for failed uploads
RETRY_ATTEMPTS=3

# Initial retry delay in seconds
RETRY_DELAY=60

# Progress update interval in seconds
PROGRESS_UPDATE_INTERVAL=10

# Database cleanup interval in days (keep logs for N days)
DATABASE_CLEANUP_DAYS=90

# Enable debug mode (true/false)
DEBUG_MODE=false

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Encrypt local temporary files (true/false)
ENCRYPT_TEMP_FILES=false

# Encryption key (leave empty to auto-generate)
ENCRYPTION_KEY=

# ============================================================================
# EXAMPLES AND NOTES
# ============================================================================

# Example Termux paths:
# Internal storage: /data/data/com.termux/files/home/storage/shared/
# Download folder: /data/data/com.termux/files/home/storage/shared/Download
# Pictures folder: /data/data/com.termux/files/home/storage/shared/Pictures
# Documents folder: /data/data/com.termux/files/home/storage/shared/Documents
# DCIM (Camera): /data/data/com.termux/files/home/storage/shared/DCIM

# File size limits:
# 1MB = 1048576
# 10MB = 10485760
# 50MB = 52428800
# 100MB = 104857600
# 500MB = 524288000
# 1GB = 1073741824

# Google Drive storage:
# Free account: 15GB = 16106127360 bytes
# Multiple accounts: 2x15GB = 30GB, 3x15GB = 45GB total
